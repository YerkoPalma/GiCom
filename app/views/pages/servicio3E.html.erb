<%= render "shared/header"%>

<div class="container" style="margin-top: 6%;">
	<div class="row">
		<div class="col-md-4">
			<%= render "shared/user_sidemenu"%>
		</div>
  	<div class="col-md-8">
  		<!-- Nav tabs -->
			<ul class="nav nav-tabs" role="tablist" style="margin-top: 15px;">
			  <li class="dropdown active">
	        <a href="#" id="myTabDrop1" class="dropdown-toggle" data-toggle="dropdown">Administrar eventos <span class="caret"></span></a>
	        <ul class="dropdown-menu" role="menu" aria-labelledby="myTabDrop1">
	          <li><a href="#dropdown1" tabindex="-1" role="tab" data-toggle="tab">Nuevo evento</a></li>
	          <li><a href="#dropdown2" tabindex="-1" role="tab" data-toggle="tab">Revisar eventos</a></li>
	        </ul>
	      </li>
			  
			  <li><a href="#settings" role="tab" data-toggle="tab">Clientes (admins) 3E</a></li>
			</ul>

			<!-- Tab panes -->
			<div class="tab-content" style="margin-top: 10px;">
			  <div class="tab-pane fade" id="settings">asdasd</div>
			  <div class="tab-pane fade in active" id="dropdown1">
			  	<%= form_for(:event, url: events_path) do |f| %>
				    <div class="form-group">
				      <%= f.label :expositor %>
				  		<%= f.text_field :expositor, :class => "form-control" %>
				    </div>
				    <div class="form-group">
				      <%= f.label :lugar %>
				  		<%= f.text_field :lugar, :class => "form-control" %>
				    </div>	
				    <div class="form-group">
				      <%= f.label :fecha %>
				  		<%= f.date_field :fecha, :class => "form-control" %>
				    </div>		
				    <div class="form-group">
				      <%= f.label :categoria %>
				  		<%= f.text_field :categoria, :class => "form-control" %>
				    </div>		
				    <div class="form-group">	
				    	<%= f.label :user %>			      
				  		<%= collection_select(:event, :user_id, User.all, :id, :name, {:prompt=>true}, {:class => "form-control"})%>
				    </div>			 
				    
				    
				    <%= f.submit "Crear evento", class: "btn btn-default" %>
				  <% end %>
				</div>
			  <div class="tab-pane fade" id="dropdown2">asdasdasdasd</div>
			  
			</div>
  	</div>
	</div>
</div>