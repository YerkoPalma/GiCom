<!-- Fixed navbar -->

<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to root_path, class: "navbar-brand" do%>
      	<%= image_tag "gicom-icon.jpg", class: "img-circle gicom-icon" %>
      <% end %>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">            
        
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if signed_in? %>
          <li>          
          	<%= image_tag current_user.avatar.url, :class => "avatar img-responsive img-circle img-profile" %>
          	<%= link_to current_user.name, current_user %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
                <li class="dropdownItem"><%= link_to "Edit profile", edit_user_path(current_user), class: "dropdownLink" %></li>
                <li class="dropdownItem"><%= link_to "Settings", '#', class: "dropdownLink" %></li>
                <li class="divider dropdownItem"></li>
                <li class="dropdownItem">
                  <%= link_to "Sign out", signout_path, class: "dropdownLink", method: "delete" %>
                </li>
              </ul>
          </li>
        <% else %>
          <li><%= link_to "Ingresar", root_path %></li>
          <li><%= link_to "Crear cuenta", signup_path %></li>
        <% end %>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>